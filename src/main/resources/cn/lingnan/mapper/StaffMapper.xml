<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lingnan.mapper.StaffMapper">
<select id="getById" resultType="Staff">
    select * from staff where staff_id=#{staffId}
</select>

<select id="getByName" resultType="Staff">
    select * from staff where staff_name =#{staffName}
</select>

<select id="getByGender" resultType="Staff">
    select * from staff where staff_gender=#{getByGender}
</select>

<select id="queryAll" resultType="Staff">
    select * from staff
</select>


<update id="update">
    update staff set
    <trim suffixOverrides=",">
        <if test="staffName!=null">
            staff_name=#{staffName},
        </if>
        <if test="staffPhone!=null">
            staff_phone=#{staffPhone},
        </if>
        <if test="staffBirthday!=null">
            staff_birthday=#{staffBirthday},
        </if>
        <if test="staffAge!=null">
            staff_age=#{staffAge},
        </if>
        <if test="staffGender!=null">
            staff_gender=#{staffGender},
        </if>
        <if test="staffPosition!=null">
            staff_position=#{staffPosition},
        </if>
        <if test="staffRegister!=null">
            staff_register=#{staffRegister},
        </if>
        <if test="staffSalary!=null">
            staff_salary=#{staffSalary},
        </if>
        <if test="staffSalary!=null">
            staff_salary=#{staffSalary},
        </if>
        <if test="staffPassword!=null">
            staff_password=#{staffPassword},
        </if>

    </trim>
    where staff_id=#{staffId}
</update>

<insert id="add">
    insert into staff
    <trim prefix="(" suffix=")" suffixOverrides=",">
        <if test="staffName!=null">
            staff_name,
        </if>
        <if test="staffPhone!=null">
            staff_phone,
        </if>
        <if test="staffBirthday!=null">
            staff_birthday,
        </if>
        <if test="staffAge!=null">
            staff_age,
        </if>
        <if test="staffGender!=null">
            staff_gender,
        </if>
        <if test="staffPosition!=null">
            staff_position,
        </if>
        <if test="staffRegister!=null">
            staff_register,
        </if>
        <if test="staffSalary!=null">
            staff_salary,
        </if>
        <if test="staffSalary!=null">
            staff_salary,
        </if>
        <if test="staffPassword!=null">
            staff_password,
        </if>

    </trim>
    <trim prefix="values(" suffix=")" suffixOverrides=",">
        <if test="staffName!=null">
            #{staffName},
        </if>
        <if test="staffPhone!=null">
            #{staffPhone},
        </if>
        <if test="staffBirthday!=null">
            #{staffBirthday},
        </if>
        <if test="staffAge!=null">
            #{staffAge},
        </if>
        <if test="staffGender!=null">
            #{staffGender},
        </if>
        <if test="staffPosition!=null">
            #{staffPosition},
        </if>
        <if test="staffRegister!=null">
            #{staffRegister},
        </if>
        <if test="staffSalary!=null">
            #{staffSalary},
        </if>
        <if test="staffSalary!=null">
            #{staffSalary},
        </if>
        <if test="staffPassword!=null">
            #{staffPassword},
        </if>

    </trim>
</insert>

<delete id="delete">
    delete from staff where staff_id=#{staffId}
</delete>

</mapper>